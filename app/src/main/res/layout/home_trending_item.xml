<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/color_white_text">

    <Button
        android:id="@+id/btnItemDiscount"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/circle"
        android:text="50%"
        android:textColor="@color/color_white_text"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOfferText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:background="@color/signup_button_color"
        android:text="OFFER"
        android:textColor="@color/color_white_text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutTrending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white_text"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnItemDiscount"
        app:layout_constraintVertical_bias="0.105">


        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:srcCompat="@mipmap/groceer_logo" />

        <RatingBar
            android:id="@+id/ratingProduct"
            style="@android:style/Widget.Material.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:isIndicator="false"
            android:numStars="5"
            android:progressTint="@color/pin_location_button_bg"
            android:rating="1"
            android:stepSize="1" />

        <TextView
            android:id="@+id/tvProductTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Lorem Ipsum"
            android:textColor="@color/splash_app_name_color"
            android:textSize="20sp"></TextView>


    </LinearLayout>

    <View
        android:id="@+id/crossViewTrending"
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:background="@color/pin_location_button_bg"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="@+id/tvProductActualPrice"
        app:layout_constraintStart_toStartOf="@+id/tvProductActualPrice"
        app:layout_constraintEnd_toEndOf="@+id/tvProductActualPrice"/>

    <TextView
        android:id="@+id/tvProductOfferPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$12.00"
        android:textColor="@color/pin_location_button_bg"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTrending"></TextView>

    <TextView
        android:id="@+id/tvProductActualPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$12.00"
        android:textColor="@color/splash_app_name_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTrending"></TextView>

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/signup_button_color"
        android:orientation="horizontal"
        android:visibility="visible"
        android:padding="10dp"
        android:text="ADD TO CART"
        android:textColor="@color/color_white_text"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductOfferPrice"
        app:layout_constraintVertical_bias="0.112" />
    <RelativeLayout
        android:id="@+id/cartAddView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/cart_layout_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProductOfferPrice"
        >

        <Button
            android:id="@+id/btnQtyMinus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/signup_button_color"
            android:text="-"
            android:textSize="20sp"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/edtQty"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/edt_white_bg"
            android:textColor="@color/splash_welcome_text_color"/>

        <Button
            android:id="@+id/btnQtyAdd"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/signup_button_color"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>