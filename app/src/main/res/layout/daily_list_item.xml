<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@color/signup_button_color"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearDailyItemLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.GroceerCart.sa.ui.CircularImageView
            android:id="@+id/imgDailyItem"
            android:layout_width="150dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/common_full_open_on_phone" />

        <TextView
            android:id="@+id/tvDailyItem"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:textAllCaps="true"
            android:padding="15dp"
            android:textColor="@color/color_white_text"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>