<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_screen_bg">

    <TextView
        android:id="@+id/tvVendorHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ali"
        android:textSize="18sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:background="#E3E1E1"
        android:textColor="@color/splash_welcome_text_color"
        app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDeliverySlotItem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvVendorHeader"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</androidx.constraintlayout.widget.ConstraintLayout>