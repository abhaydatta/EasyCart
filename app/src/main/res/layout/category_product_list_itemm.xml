<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/color_white_text">


    <Button
        android:id="@+id/btnOfferText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@color/signup_button_color"
        android:text="OFFER"
        android:textColor="@color/color_white_text"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/color_white_text"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOfferText"
        app:layout_constraintVertical_bias="0.105">


        <ImageView
            android:id="@+id/ivProduct"
            android:layout_width="150dp"
            android:layout_height="70dp"
            app:srcCompat="@mipmap/groceer_logo" />

        <RatingBar
            android:id="@+id/ratingProduct"
            style="@android:style/Widget.Material.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/pin_location_button_bg"
            android:rating="1"
            android:stepSize="1" />

        <TextView
            android:id="@+id/tvCategoryProductTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:padding="10dp"
            android:singleLine="true"
            android:text="Lorem Ipsum"
            android:textAllCaps="false"
            android:textColor="@color/splash_app_name_color"
            android:textSize="20sp"></TextView>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linear_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg_transperent"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/tvProductWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:text="500Gm"
            android:paddingLeft="5dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/splash_app_name_color" />

        <Button
            android:id="@+id/tvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/com_facebook_tooltip_black_bottomnub"
            android:text="200.00 RS" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linear_dropdown">
        <TextView
            android:id="@+id/tvCatProductOfferPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="0"
            android:textColor="@color/pin_location_button_bg"
            android:textStyle="bold"
           ></TextView>

        <TextView
            android:id="@+id/tvCatProductActualPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textColor="@color/splash_app_name_color"
            android:textSize="15sp"
            android:textStyle="bold"
            ></TextView>

        <View
            android:id="@+id/crossView"
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@color/pin_location_button_bg"
            />

    </RelativeLayout>


    <Button
        android:id="@+id/btnCatAddToCart"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/signup_button_color"
        android:orientation="horizontal"
        android:padding="10dp"
        android:text="ADD TO CART"
        android:textColor="@color/color_white_text"
        android:textSize="15sp"
        android:visibility="visible"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_price"
        app:layout_constraintVertical_bias="0.112" />

    <Button
        android:id="@+id/btnCartNotify"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/button_notify"
        android:orientation="horizontal"
        android:padding="10dp"
        android:text="Notify"
        android:textColor="@color/color_white_text"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_price"
        app:layout_constraintVertical_bias="0.112" />

