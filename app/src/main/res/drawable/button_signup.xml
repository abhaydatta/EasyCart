<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="@color/singup_button_border_color" />
            <gradient android:angle="-90" android:startColor="@color/singup_button_border_color" android:endColor="@color/singup_button_border_color" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="@color/signup_button_color" />
            <solid android:color="@color/signup_button_color"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <corners android:radius="30dip" />
            <stroke android:width="2dip" android:color="@color/signup_button_color" />
            <gradient android:angle="-90" android:startColor="@color/signup_button_color" android:endColor="@color/signup_button_color" />
        </shape>
    </item>
</selector>